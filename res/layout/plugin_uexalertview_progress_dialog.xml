<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/plugin_uexalertview_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/plugin_uexalertview_margin"
        android:gravity="center"
        android:singleLine="true"
        android:text="title"
        android:textSize="@dimen/plugin_uexalertview_title" />

    <org.zywx.wbpalmstar.plugin.uexalertview.progressbar.HorizontalProgressBarWithNumber
        android:id="@+id/plugin_uexalertview_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/plugin_uexalertview_margin"
        android:layout_marginRight="@dimen/plugin_uexalertview_margin"
        android:progress="50" />

    <TextView
        android:id="@+id/plugin_uexalertview_tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/plugin_uexalertview_margin"
        android:layout_marginLeft="@dimen/plugin_uexalertview_margin"
        android:layout_marginRight="@dimen/plugin_uexalertview_margin"
        android:layout_marginTop="@dimen/plugin_uexalertview_margin"
        android:gravity="center"
        android:singleLine="true"
        android:text="99%"
        android:textSize="@dimen/plugin_uexalertview_title" />

</LinearLayout>